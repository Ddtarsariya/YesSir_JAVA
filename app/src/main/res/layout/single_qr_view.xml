<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/show_qr_Student_id_card"
        android:layout_width="wrap_content"
        android:layout_marginStart="3sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        app:cardBackgroundColor="#E4E3E3">

        <TextView
            android:id="@+id/show_qr_Student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="15sp"
            android:paddingTop="10sp"
            android:paddingEnd="15sp"
            android:paddingBottom="10sp"
            android:text="1"
            android:textColor="@color/black_de"
            android:textSize="20sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/show_qr_Student_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_qr_Student_id_card"
        app:cardBackgroundColor="#E4E3E3">

        <TextView
            android:id="@+id/show_qr_Student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10sp"
            android:text="Student Name"
            android:textColor="@color/black_de"
            android:textSize="20sp" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/show_Student_QR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_qr_Student_name_card"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_search" />

    <Button
        android:id="@+id/show_qr_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_Student_QR"
        android:layout_centerHorizontal="true"
        android:layout_margin="10sp"
        android:text="Save" />

</RelativeLayout>